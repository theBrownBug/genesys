-# frozen_string_literal: true
= simple_form_for(@answer) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :answer
    = f.input :rating
    = f.input :likes
    = f.association :question

  .form-actions
    = f.button :submit
