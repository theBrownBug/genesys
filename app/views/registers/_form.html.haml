-# frozen_string_literal: true
= simple_form_for(@register) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
  = f.input :email, class: 'form-group', placeholder: 'Enter Email'
  %br
  %section
  .container
    .row
      .col-lg-6
        .text-primary
        %h6= f.label :option, "Option 1", :value => 1 
        %p= f.label :option, "Manual adding of learning blocks.", :value => 1 
        %p= f.label :option, "Manual adding of constant blocks such as appointments or lectures.", :value => 1
        %p= f.label :option, "Free", :value => 1
        = f.radio_button :option, 1
      .col-lg-6
        .text-primary
        %h6= f.label :option, "Option 2", :value => 2
        %p= f.label :option, "Automated adding of learning blocks.", :value => 2
        %p=f.label :option, "Automated adding of constant blocks such as appointments or lectures.", :value => 2
        %p= f.label :option, "Â£2 per month", :value => 2 
        = f.radio_button :option, 2, :checked => true
  %br
  .form-actions
  = f.button :submit, "Register Interest", class: 'btn btn-outline-primary ms-3'