-# frozen_string_literal: true
= javascript_pack_tag 'registers'
= simple_form_for(@register) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  
  .form-inputs
    = f.input :email
    = f.label :option, "Option 1", :value => 1, :input_html => { :class => 'tier_price' }
    = f.radio_button :option, 1
    = f.label :option, "Option 2", :value => 2, :input_html => { :class => 'tier_price' }
    = f.radio_button :option, 2, :checked => true
    = f.input :lat, :as => :hidden, :input_html => { :value => "" }
    = f.input :long, :as => :hidden, :input_html => { :value => "" }


  .form-actions
    = f.button :submit

