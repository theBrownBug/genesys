<%= javascript_pack_tag "FAQs" %>
<section>
  <h3 class="text-center mb-4 pb-2 text-primary fw-bold">FAQs</h3>
  <p class="text-center mb-5">
    <strong>Find the answers for the most frequently asked questions below</strong>
  </p>
</section>

<section>
  <div class="container">
    <div class="row">
      <div class="col text-center">
        <a href="/questions/new" class="btn btn-outline-primary btn-" role="button"> Submit a Question </a>
      </div>
    </div>
  </div>
  <br>
</section>

<div class="accordion accordion-flush" id="accordionFlush">
  <% @questions.each do |question| %>
    <% if question.is_live and not question.get_answer.nil? %>
      <div id="<%=question.id%>" class="accordion-item question_card">
        <h2 class="accordion-header" id="flush-heading<%question.id%>">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse<%question.id%>" aria-expanded="false" aria-controls="flush-collapse<%question.id%>">
            <strong> <%=question.question %> </strong>
          </button>
        </h2>
        <div id="flush-collapse<%question.id%>" class="accordion-collapse collapse" aria-labelledby="flush-heading<%question.id%>" >
          <div class="accordion-body"><%= question.get_answer%></div>
        </div>
      </div>
      <br>

    <%end %>
  <%end %>
</div>