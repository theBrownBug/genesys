-# frozen_string_literal: true
= simple_form_for(@review) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    %br
    = f.text_area :body, :rows =>10, :class => "form-control" ,:placeholder => 'Enter Review.'
    = f.input :rating, input_html: { min: '0', max: '5', step: 'any', :placeholder => 'Enter a value between 0 and 5.'}
    -#= f.input :likes
    - if user_signed_in? && current_user.internal?
      - if can? :edit, @review
        = f.input :is_live

  .form-actions
    = f.button :submit
